<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ru.mativ.server.mybatis.mappers.UserMapper">

    <resultMap id="UserDaoResult" type="ru.mativ.server.repository.pojo.UserDao">
        <result property="id" column="ID" />
        <result property="login" column="LOGIN" />
        <result property="name" column="NAME" />
        <result property="mail" column="MAIL" />
        <result property="password" column="PASSWORD" />
    </resultMap>

    <insert id="insert" parameterType="ru.mativ.server.repository.pojo.UserDao">
        INSERT INTO user (LOGIN, NAME, MAIL, PASSWORD)
        VALUES (#{login}, #{name},
        #{mail}, #{password});
    </insert>

    <select id="getByLoginPass" resultMap="UserDaoResult">
        SELECT *
        FROM user
        WHERE login = #{login}
        AND password = #{pass};
    </select>

    <select id="getByLogin" resultMap="UserDaoResult">
        SELECT *
        FROM user
        WHERE login = #{login};
    </select>

</mapper>
